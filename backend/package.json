{
  "name": "warehouse-api",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "24.5.0"
  },
  "scripts": {
    "start": "node --env-file-if-exists=.env src/main.ts",
    "dev": "node --env-file-if-exists=.env --watch src/main.ts",
    "test": "vitest",
    "db:start": "docker run --name warehouse -e POSTGRES_PASSWORD=postgres -d -p 5432:5432 postgres:17.6",
    "db:update": "drizzle-kit push",
    "db:generate-migrations": "drizzle-kit generate",
    "db:apply-migrations": "drizzle-kit migrate",
    "db:seed": "node --env-file-if-exists=.env src/db/seed-local.ts",
    "db:browser": "drizzle-kit studio"
  },
  "type": "module",
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "drizzle-orm": "0.44.4",
    "drizzle-seed": "0.3.1",
    "drizzle-zod": "0.8.3",
    "express": "5.1.0",
    "morgan": "~1.9.1",
    "pg": "8.16.3",
    "zod": "4.1.1"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.5.1",
    "@types/cookie-parser": "1.4.9",
    "@types/debug": "4.1.12",
    "@types/express": "5.0.3",
    "@types/morgan": "1.9.10",
    "@types/pg": "8.15.5",
    "@types/supertest": "6.0.3",
    "@vitest/ui": "3.2.4",
    "drizzle-kit": "0.31.4",
    "supertest": "7.1.4",
    "vitest": "3.2.4"
  }
}
